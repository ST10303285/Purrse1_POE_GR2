<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#A8B98B"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Category Selector -->
    <Button
        android:id="@+id/btnSelectCategory"
        android:text="Select Category"
        android:backgroundTint="#D37878"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Budget Amount -->
    <EditText
        android:id="@+id/editBudgetAmount"
        android:hint="Enter budget amount"
        android:inputType="numberDecimal"
        android:background="@drawable/rounded_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextMinBudget"
        android:hint="Minimum Budget"
        android:inputType="numberDecimal"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/editTextMaxBudget"
        android:hint="Maximum Budget"
        android:inputType="numberDecimal"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveBudget"
        android:text="Save Budget"
        android:backgroundTint="#D37878"
        android:textColor="#FFF"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivCat"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:src="@drawable/cat1" />
</LinearLayout>
