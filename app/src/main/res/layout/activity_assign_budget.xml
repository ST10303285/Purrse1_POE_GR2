<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Category Selector -->
    <Button
        android:id="@+id/btnSelectCategory"
        android:text="Select Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Budget Amount -->
    <EditText
        android:id="@+id/editBudgetAmount"
        android:hint="Enter budget amount"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/editTextMinBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Minimum Budget"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextMaxBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Maximum Budget"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:layout_marginTop="8dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveBudget"
        android:text="Save Budget"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivCat"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/cat1" />

</LinearLayout>
