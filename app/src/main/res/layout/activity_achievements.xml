<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#A8B98B"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Cat Level -->
        <TextView
            android:id="@+id/catLevelText"
            android:text="Level 1 - Kitten"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/catLevelImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/cat1"
            android:layout_marginBottom="12dp" />

        <ProgressBar
            android:id="@+id/catXpProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:progressDrawable="@drawable/cat1"
            android:max="100"
            android:progress="30"
            android:layout_marginBottom="24dp" />

        <!-- Badges Header -->
        <TextView
            android:text="Earned Badges"
            android:textSize="18sp"
            android:textColor="#4F5C2D"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Badges Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/badgeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
